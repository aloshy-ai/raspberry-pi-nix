{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start GitHub Runner",
            "runtimeExecutable": "bash",
            "runtimeArgs": [
                "${workspaceFolder}/.github/actions/runner/start"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "postDebugTask": "Show Runner Logs"
        }
    ]
}