{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start GitHub Runner",
            "runtimeExecutable": "bash",
            "runtimeArgs": [
                "${workspaceFolder}/.github/actions/runner/start"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "internalConsole",
            "postDebugTask": "Show Runner Logs"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build Image",
            "runtimeExecutable": "docker",
            "runtimeArgs": [
                "run",
                "--rm",
                "-v",
                "${workspaceFolder}/artifacts:/build/artifacts",
                "nixos-rpi-builder"
            ],
            "preLaunchTask": "Build Docker Image",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ]
}
